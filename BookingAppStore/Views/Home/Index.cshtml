@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


@using BookingAppStore.Models;
@model IEnumerable<Book>

@{
    ViewBag.Title = "Книжный магазин";
}

<div>
    <h2>@ViewData["Head"]</h2>
    <h2>@ViewBag.Head2</h2>

    <ul>
        @foreach (string s in ViewBag.Answer)
        {
            <li>@s</li>
        }
    </ul>


    <h3>Распродажа книг</h3>
    <table>
        <tr>
            <td><p>Название книг</p></td>
            <td><p>Автор</p></td>
            <td><p>Цена</p></td>
            <td></td>
        </tr>
        @foreach (Book b in Model)
        {
            <tr>
                <td><p>@b.Name</p></td>
                <td><p>@b.Author</p></td>
                <td><p>@b.Price</p></td>
                <td><p><a href="/Home/Buy/@b.Id">Купить</a></p></td>
            </tr>
        }
    </table>
</div>



@helper BookList(IEnumerable<Book> books)
{
    <ul>
        @foreach (Book b in books)
        {
            <li>@b.Name</li>
        }
    </ul>
}
<h3>List books</h3>
@BookList(Model)




